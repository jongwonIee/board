<br>
<% @posts.each do |p| %>
    <%= p.user.email %><br>
    <%= p.title %><br>
    <%= link_to '이 글 보기', post_path(p.id) %> |
    <% if current_user %>
        <% if p.user.id == current_user.id %>
            <%= link_to '수정하기', edit_post_path(p.id) %> |
            <%= link_to '삭제하기', post_path(p.id), method: :delete, data: { confirm: '이 글을 삭제하시겠습니까?'} %>
        <% end %>
    <% end %>
    <br>
<% end %>

